<h1>Freelance Specs</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Skill</th>
      <th>Portfolio</th>
      <th>Pricing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @freelancespecs.each do |freelancespec| %>
      <tr>
        <td><%= freelancespec.first_name %></td>
        <td><%= freelancespec.last_name %></td>
        <td><%= freelancespec.skill %></td>
        <td><%= freelancespec.portfolio %></td>
        <td><%= number_to_currency(freelancespec.pricing) %></td>
        <td><%= link_to 'Show', freelancespec %></td>
        <td><%= link_to 'Edit', edit_freelancespec_path(freelancespec) %></td>
        <td><%= link_to 'Destroy', freelancespec, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

